{
  "parserOptions": {
    "ecmaVersion": 3,
    "sourceType": "module"
  },
  "env": {
    "node": false,
    "browser": true,
    "es6": false
  },
  "rules": {
    "no-tabs": 2,
    "quotes": [2, "single", "avoid-escape"],
    "semi": 2,
    "no-undef": 2,
    "no-unused-vars": 2,
    "array-bracket-spacing": [2, "never"],
    "block-scoped-var": 2,
    "brace-style": [2, "1tbs"],
    "camelcase": 1,
    "computed-property-spacing": [2, "never"],
    "curly": 2,
    "eol-last": 2,
    "eqeqeq": [2, "smart"],
    "max-depth": [1, 3],
    "max-len": [1, 80],
    "max-statements": [1, 15],
    "new-cap": 0,
    "no-extend-native": 2,
    "no-mixed-spaces-and-tabs": 2,
    "no-trailing-spaces": 2,
    "no-use-before-define": [2, "nofunc"],
    "object-curly-spacing": [2, "never"],
    "keyword-spacing": [2, {"before": true, "after": true}],
    "space-unary-ops": 2
  }
}