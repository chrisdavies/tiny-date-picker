{
  "name": "tiny-date-picker",
  "version": "4.0.0-beta6",
  "description": "",
  "main": "dist/tiny-date-picker.js",
  "types": "dist/types",
  "files": [
    "/dist"
  ],
  "scripts": {
    "test": "jasmine",
    "test:watch": "onchange -i -k \"src/**/*.{js,jsx,ts,tsx}\" --exclude \"**/dist/**\" -- npm run test",
    "start": "esbuild public/demo.ts --global-name=minidoc --bundle --servedir=public --outfile=public/dist/demo.js --sourcemap --define:process.env.NODE_ENV=\"'development'\"",
    "watch:ts": "tsc --noEmit --watch --preserveWatchOutput",
    "prepare": "rm -rf ./dist && npm test && npm run release:ts && npm run release:es",
    "release:ts": "tsc --declaration --declarationDir dist/types --declarationMap --emitDeclarationOnly",
    "release:es": "NODE_ENV=production esbuild --minify --sourcemap=external --format=cjs --bundle src/index.ts --outfile=dist/tiny-date-picker.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chrisdavies/tiny-date-picker.git"
  },
  "author": "Chris Davies <dev@christophilus.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/chrisdavies/tiny-date-picker/issues"
  },
  "homepage": "https://github.com/chrisdavies/tiny-date-picker#readme",
  "devDependencies": {
    "@types/jasmine": "4.0.3",
    "esbuild": "0.14.47",
    "esbuild-runner": "2.2.1",
    "jasmine": "3.8.0",
    "typescript": "4.7.4"
  },
  "prettier": {
    "trailingComma": "all",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "printWidth": 100
  }
}
